# Restrictions
CC = gcc
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)

all: $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	 $(RM) -f $(OBJ)

fclean:	clean oclean

re: oclean all

.PHONY: all clean oclean fclean re
